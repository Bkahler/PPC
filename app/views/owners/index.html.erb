<h1> OWNERS tables will go here </h1>
<%= search_form_for @search, :html=>{:class=>'form-inline'} do |f| %>
  <%= f.condition_fields do |c| %>
    <div class="field form-group">
      <%= c.attribute_fields do |a| %>
        <%= a.attribute_select associations: [:property], :class=>'form-control'%>
      <% end %>
      <%= c.predicate_select ({only: [:cont, :not_cont, :eq, :not_eq, :blank, :null, :not_null]})%>
      <%= c.value_fields do |v| %>
        <%=v.text_field :value, :class=>'form-control' %>
      <% end %>
    </div>
  <% end %>
  <div class="actions form-control"><%= f.submit "Search", :class=>'btn btn-default'%></div>
<% end %>

<table class="table">
  <tr>
    <th><%= sort_link @search, :name ,"Name"%></th>
    <th><%= sort_link @search, :doc,"Doc" %></th>
    <th><%= sort_link @search, :street,"Street"%></th>
    <th><%= sort_link @search, :city,"City"%></th>
    <th><%= sort_link @search, :state,"State"%></th>
    <th><%= sort_link @search, :country,"Country"%></th>
    <th><%= sort_link @search, :phone,"Phone"%></th>
    <th><%= sort_link @search, :alternate_phone,"Alternate Phone"%></th>
    <th><%= sort_link @search, :email ,"Email"%></th>
    <th><%= sort_link @search, :notes,"Notes"%></th>

  </tr>
  <% @owners.each do |owner| %>
  <tr>
    <td><%= owner.name %></td>
    <td><%= owner.doc %></td>
    <td><%= owner.street %></td>
    <td><%= owner.city %></td>
    <td><%= owner.state %></td>
    <td><%= owner.country %></td>
    <td><%= owner.phone %></td>
    <td><%= owner.alternate_phone%></td>
    <td><%= owner.email%></td>
    <td><%= owner.notes%></td>

    <td><%= link_to 'view' , owner_path(owner.id)%></td>
  </tr>
  <% end %>
</table>